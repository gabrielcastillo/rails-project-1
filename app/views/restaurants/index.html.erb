<p id="notice"><%= notice %></p>

<h1>Listing Restaurants <span class="pull-right"><%= link_to 'New Restaurant', new_restaurant_path, :class => ['btn btn-default'] %></span></h1>
<div class="table-responsive">
  <table class="table table-bordered table-hover">
    <thead style="background-color:#454564; color:#ffffff; text-shadow: 1px 1px 2px rgba(000,000,000, 0.7);">
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Phone</th>
        <th>Website</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @restaurants.each do |restaurant| %>
        <tr>
          <td><%= restaurant.name %></td>
          <td><%= restaurant.address %></td>
          <td><%= restaurant.phone %></td>
          <td><%= restaurant.website %></td>
          <td><%= link_to 'Show', restaurant %></td>
          <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
          <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>


